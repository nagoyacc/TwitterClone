<header>
  <ul>
    <li class="left"><p>TwitterClone</p></li>
    <div class="right_menu">
      <li class="right"><a href="#">サインアップ</a></li>
      <li class="right"><a href="#">ログイン</a></li>
    </div>
  </ul>
</header>
<%= form_with(model: @post, local: true, url: choose_new_or_edit  ) do |form| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= @post.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <section class="twitter_show">
  <div class="tweet_content">
    <%= form.label :内容： %>
    <%= form.text_field :content, size: "60"%>
    <%= form.submit :送信 %>
  </div>
  <%= link_to 'もどる', tweets_path %>
  </section>
<% end %>
